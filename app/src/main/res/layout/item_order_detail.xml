<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_white"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_below="@+id/tv_order_num"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <ImageView
            android:id="@+id/iv_good"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_good_name"
            android:layout_toRightOf="@+id/iv_good"
            android:textColor="@color/black_de"
            android:text="牵牛花"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_size"
            android:layout_toRightOf="@+id/iv_good"
            android:layout_below="@+id/tv_good_name"
            android:textColor="@color/black_de"
            android:text="是否含花盆:不含花盆 颜色:深黑色"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_store_count"
            android:layout_toRightOf="@+id/iv_good"
            android:textColor="@color/black_de"
            android:layout_below="@+id/tv_good_size"
            android:text="100"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:id="@+id/tv_good_price"
            android:textColor="@color/black_de"
            android:layout_alignParentRight="true"
            android:text="¥ 599"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_num"
            android:textColor="@color/black_de"
            android:layout_below="@+id/tv_good_price"
            android:layout_alignParentRight="true"
            android:text="88"
            android:textSize="10sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_sum_prices"
            android:layout_below="@+id/tv_good_num"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_de"
            android:text="共计:¥ 29832"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginBottom="10dp"
            />
        </RelativeLayout>

</RelativeLayout>