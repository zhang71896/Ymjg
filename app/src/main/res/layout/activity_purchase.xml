<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_bar" android:id="@+id/header_bar" />
    <android.support.design.widget.TabLayout
               android:layout_marginTop="1dp"
               android:layout_below="@+id/header_bar"
               android:id="@+id/tab_essence"
               android:layout_width="match_parent"
               android:layout_height="40dp"
               android:background="@color/bg_white"
               app:tabMode="scrollable"
               app:tabSelectedTextColor="@color/black_de"
               app:tabTextColor="@color/black_de"
               app:tabIndicatorColor="@color/black_de"/>

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:id="@+id/rl_bottom_menu"
        android:background="@color/black_de"
        android:layout_height="80dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="10sp"
            android:layout_alignParentTop="true"
            android:gravity="center"
            android:text="商品价格以购物车中为准"
            android:background="@color/orange_yellow"
            android:layout_height="15dp"
            android:layout_width="match_parent"
            />
        <TextView
            android:id="@+id/tv_produce_order"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_title"
            android:layout_height="35dp"
            android:layout_width="80dp"
            android:background="@color/color_text_bg"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/bg_white"
            android:text="生成订单"
            />
        <ImageView
            android:layout_alignParentTop="true"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="3dp"
            android:id="@+id/iv_cart"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/cart"
            />

        <RelativeLayout
            android:id="@+id/rl_shop_cart"
            android:layout_below="@+id/tv_title"
            android:layout_toRightOf="@+id/iv_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_total_price"
            android:textColor="@color/bg_white"
            android:text="¥ 0"
            android:layout_height="18dp"
            android:layout_width="wrap_content"
            />
        <TextView
            android:layout_below="@+id/tv_total_price"
            android:textSize="8sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_total_goods_num"
            android:textColor="@color/bg_white"
            android:text="共计商品0件"
            android:layout_height="10dp"
            android:layout_width="wrap_content"
            />
        </RelativeLayout>
            <LinearLayout
                android:background="@color/bg_white"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_height="30dp"
                android:layout_width="match_parent">
                <RadioButton
                    android:id="@+id/rb_goods"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="商品"
                    android:button="@null"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:textColor="@drawable/color_radiobutton"
                    android:background="@drawable/radio_button_selector"
                    />
                <RadioButton
                    android:id="@+id/rb_order_manage"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:text="订单管理"
                    android:button="@null"
                    android:layout_height="30dp"
                    />
            </LinearLayout>
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:layout_below="@+id/tab_essence"
        android:layout_above="@+id/rl_bottom_menu"
        android:id="@+id/vp_essence"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />
</RelativeLayout>
