<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="1dp"
    android:background="@color/bg_white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/gray_e5"
        android:layout_height="match_parent"
        >
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_pic"
        android:layout_width="138dp"
        android:layout_height="80dp"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:layout_below="@+id/iv_pic"
        android:textColor="@color/black_de"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:id="@+id/good_name"
        android:text="百合花"
        android:layout_width="140dp"
        android:layout_height="30dp"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/good_name"
        android:gravity="center"
        android:id="@+id/tv_market_price"
        android:textColor="@color/black_de"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="10sp"
        android:text="市场价:"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/good_name"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_market_price"
        android:id="@+id/tv_market_price_value"
        android:textColor="@color/black_de"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:text=" ¥ 599"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_market_price"
        android:id="@+id/tv_now_price"
        android:textColor="@color/black_de"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:text="现价: "
        />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_market_price"
        android:gravity="center"
        android:layout_toRightOf="@+id/tv_now_price"
        android:id="@+id/tv_now_price_value"
        android:textColor="@color/colorred"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textSize="16sp"
        android:text=" ¥ 599"
        />
        </RelativeLayout>
</RelativeLayout>