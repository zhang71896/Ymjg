<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/header_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <TextView
        android:layout_marginTop="10dp"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <TextView
        android:id="@+id/tv_idcard"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="身份证号码"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/et_id"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="40dp"
        android:maxLength="18"
        android:hint="请输入身份证号码"
        android:inputType="text"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_name"
        android:layout_marginLeft="20dp"
        android:textSize="16sp"
        android:text="真实姓名"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        />
    <EditText
        android:id="@+id/et_name"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_height="40dp"
        android:maxLength="18"
        android:hint="请输入真实姓名"
        android:inputType="text"
        android:textSize="16sp"
        android:gravity="center_vertical"
        />
   <TextView
       android:id="@+id/tv_idz"
       android:layout_marginLeft="20dp"
       android:textSize="16sp"
       android:text="身份证正面照"
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:gravity="center_vertical"
       />
   <TextView
       android:id="@+id/tv_idzc"
       android:layout_marginLeft="20dp"
       android:textSize="16sp"
       android:textColor="@color/colorred"
       android:text="(需要能看清姓名、地址、身份证号等信息)"
       android:layout_width="wrap_content"
       android:layout_height="30dp"
       android:gravity="center_vertical"
       />

            <ImageView
                android:id="@+id/iv_idz"
                android:background="@mipmap/add"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/tv_idf"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:text="身份证正面照"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_idfc"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorred"
                android:text="(需要能看清签发机构、有效日期等信息)"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_idf"
                android:background="@mipmap/add"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <TextView
                android:id="@+id/tv_bussiness_lience"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:text="营业执照"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/tv_bussiness_liencec"
                android:layout_marginLeft="20dp"
                android:textSize="16sp"
                android:textColor="@color/colorred"
                android:text="(需能要看清签发机构、有效日期等信息)"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                />
            <ImageView
                android:id="@+id/iv_bussiness_lience"
                android:background="@mipmap/add"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp" />
            <Button
                android:layout_marginTop="20dp"
                android:id="@+id/btn_submit"
                android:textSize="20sp"
                android:text="提交"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/white"
                android:background="@color/colororange"
                android:layout_marginBottom="40dp"
                />
        </LinearLayout>
    </ScrollView>


</LinearLayout>