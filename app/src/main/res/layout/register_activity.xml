<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/header_bar"/>
        <TextView
            android:layout_marginTop="10dp"
            android:background="@color/gray_e5"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    <!--手机号码-->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_mobile"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="手机号："
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_mobile"
            android:layout_toRightOf="@+id/tv_mobile"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:maxLength="11"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--验证码-->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_messageCode"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="验证码："
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_message_code"
            android:layout_toRightOf="@+id/tv_messageCode"
            android:layout_marginLeft="5dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:maxLength="6"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/tv_line"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/et_message_code"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:background="@color/black_de"
            />
        <Button
            android:layout_toRightOf="@+id/tv_line"
            android:layout_marginLeft="15dp"
            android:id="@+id/btn_get_message_code"
            android:text="获取验证码"
            android:textSize="16sp"
            android:maxLength="6"
            android:background="@null"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!--密码-->
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_psw1"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="密码："
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_psw1"
            android:layout_toRightOf="@+id/tv_psw1"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxLength="12"
            android:hint="请输入6-12位的密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_line1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!--确认密码-->
    <RelativeLayout
        android:id="@+id/rl_ensure_psw"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_psw2"
            android:layout_marginLeft="20dp"
            android:textSize="16sp"
            android:text="确认密码："
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            />
        <EditText
            android:id="@+id/et_psw2"
            android:layout_toRightOf="@+id/tv_psw2"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:maxLength="12"
            android:hint="请输入6-12位的密码"
            android:inputType="textPassword"
            android:textSize="16sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_line2"
        android:layout_marginTop="10dp"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="1dp" />
    <!--注册协议-->
    <RelativeLayout
        android:id="@+id/rl_aggrement"
        android:layout_marginTop="10dp"
        android:layout_height="40dp"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/tv_aggrement"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:text="注册即表示已同意"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            />
        <Button
            android:id="@+id/btn_aggrement"
            android:layout_toRightOf="@+id/tv_aggrement"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/colororange"
            android:maxLength="12"
            android:text="《用户注册协议》"
            android:background="@null"
            android:textSize="14sp"
            android:gravity="center_vertical"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_register"
        android:textSize="20sp"
        android:text="注册"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/white"
        android:background="@color/colororange"
        />
</LinearLayout>