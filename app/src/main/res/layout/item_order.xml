<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/bg_white"
    android:layout_width="match_parent" android:layout_height="160dp">
    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/tv_order_num"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="订单号:1491987332194386"
        android:textColor="@color/black_de"
        android:textSize="10sp"
        />
    <TextView
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:id="@+id/tv_order_time"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="2017-03-28 10:48:55"
        android:textColor="@color/black_de"
        android:textSize="10sp"
        />
    <RelativeLayout
        android:id="@+id/rl_center"
        android:layout_below="@+id/tv_order_num"
        android:background="@color/gray_e5"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        >
        <ImageView
            android:id="@+id/iv_good"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_launcher"
            />
        <TextView
            android:id="@+id/tv_good_name"
            android:layout_toRightOf="@+id/iv_good"
            android:textColor="@color/black_de"
            android:text="牵牛花"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_size"
            android:layout_toRightOf="@+id/iv_good"
            android:layout_below="@+id/tv_good_name"
            android:textColor="@color/black_de"
            android:text="是否含花盆:不含花盆 颜色:深黑色"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_store_count"
            android:layout_toRightOf="@+id/iv_good"
            android:textColor="@color/black_de"
            android:layout_below="@+id/tv_good_size"
            android:text="100"
            android:textSize="10sp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_price"
            android:textColor="@color/black_de"
            android:layout_alignParentRight="true"
            android:text="¥ 599"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_num"
            android:textColor="@color/black_de"
            android:layout_below="@+id/tv_good_price"
            android:layout_alignParentRight="true"
            android:text="88"
            android:textSize="10sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            android:id="@+id/tv_good_sum_prices"
            android:layout_below="@+id/tv_good_num"
            android:layout_alignParentRight="true"
            android:textColor="@color/black_de"
            android:text="共计:¥ 29832"
            android:textSize="12sp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        </RelativeLayout>
        <TextView
            android:id="@+id/tv_show_all_good"
            android:layout_below="@+id/rl_center"
            android:layout_alignParentRight="true"
            android:textSize="10sp"
            android:layout_marginTop="2dp"
            android:text="商品列表展开"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/blue"
            />
        <TextView
            android:id="@+id/tv_total_prices"
            android:layout_below="@+id/tv_show_all_good"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/black_de"
            android:textSize="14sp"
            android:text="¥ 29832"
            android:gravity="center_vertical"
            android:layout_height="15dp"
            android:layout_width="wrap_content"
            />
         <TextView
             android:id="@+id/tv_total_num"
             android:layout_below="@+id/tv_show_all_good"
             android:layout_marginTop="2dp"
             android:layout_toLeftOf="@+id/tv_total_prices"
             android:gravity="center_vertical"
             android:textColor="@color/black_de"
             android:layout_marginRight="1dp"
            android:textSize="12sp"
            android:text="共计1件商品  合计:"
            android:layout_height="15dp"
            android:layout_width="wrap_content"
            />
    <TextView
        android:id="@+id/tv_line"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_total_prices"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black_de"
        />
    <Button
        android:id="@+id/btn_pay"
        android:layout_below="@+id/tv_line"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black_de"
        android:textSize="12sp"
        android:text="立即付款"
        android:background="@drawable/red_rectangle"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_width="60dp"
        />
    <Button
        android:id="@+id/btn_cancel"
        android:layout_below="@+id/tv_line"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/btn_pay"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/black_de"
        android:textSize="12sp"
        android:text="取消订单"
        android:background="@drawable/black_rectangle"
        android:gravity="center"
        android:layout_height="25dp"
        android:layout_width="60dp"
        />
</RelativeLayout>